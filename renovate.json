{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    "npm:unpublishSafe",
    "schedule:automergeWeekly"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "extends": [
        "schedule:automergeDaily"
      ],
      "matchPackageNames": [
        "!/opensuse/tumbleweed$/"
      ]
    }
  ],
  "dockerfile": {
    "fileMatch": [
      "(^|/|\\.)dockerfile$"
    ],
    "major": {
      "enabled": false
    },
    "minor": {
      "enabled": false
    },
    "patch": {
      "enabled": false
    },
    "groupName": "Base images"
  },
  "automerge": true
}
