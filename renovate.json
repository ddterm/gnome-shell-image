{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    "npm:unpublishSafe",
    ":automergeAll",
    "schedule:automergeDaily",
    "customManagers:dockerfileVersions"
  ],
  "customDatasources": {
    "html": {
      "format": "html"
    },
    "repology.alpine_3_18": {
      "defaultRegistryUrlTemplate": "https://repology.org/api/v1/project/{{{encodeURIComponent packageName}}}",
      "transformTemplates": [
        "{ 'releases': $[repo='alpine_3_18'].{ 'version': origversion }[] }"
      ]
    },
    "repology.alpine_3_19": {
      "defaultRegistryUrlTemplate": "https://repology.org/api/v1/project/{{{encodeURIComponent packageName}}}",
      "transformTemplates": [
