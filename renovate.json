{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    "security:minimumReleaseAgeNpm",
    "customManagers:dockerfileVersions"
  ],
  "customDatasources": {
    "repology": {
      "defaultRegistryUrlTemplate": "https://repology.org/api/v1/project/{{{ encodeURIComponent (replace '\\[.*\\]$' '' packageName) }}}",
      "transformTemplates": [
        "${{{ replace '^[^\\[]*' '' packageName }}}[]",
        "{ 'releases': $.{ 'version': origversion }[] }"
      ]
    }
  },
  "packageRules": [
    {
      "matchFileNames": [
        "*.dockerfile"
      ],
      "groupName": "Image dependencies",
      "separateMajorMinor": false,
      "extends": [
        ":automergeAll",
        "schedule:automergeDaily"
      ]
    },
    {
      "matchDatasources": [
        "custom.repology"
      ],
      "matchFileNames": [
        "alpine-*.dockerfile",
        "archlinux.dockerfile",
        "fedora-*.dockerfile",
        "opensuse-*.dockerfile"
      ],
      "versioning": "rpm"
    },
    {
      "matchDatasources": [
        "custom.repology"
      ],
      "matchFileNames": [
        "debian-*.dockerfile",
        "ubuntu-*.dockerfile"
      ],
      "versioning": "deb"
    },
    {
      "matchDatasources": [
        "deb"
      ],
      "matchFileNames": [
        "ubuntu-24.04.dockerfile"
      ],
      "registryUrls": [
        "http://ftp.ubuntu.com/ubuntu?release=noble&components=main,universe&binaryArch=amd64",
        "http://ftp.ubuntu.com/ubuntu?release=noble-updates&components=main,universe&binaryArch=amd64"
      ]
    },
    {
      "matchDatasources": [
        "deb"
      ],
      "matchFileNames": [
        "ubuntu-25.04.dockerfile"
      ],
      "registryUrls": [
        "http://ftp.ubuntu.com/ubuntu?release=plucky&components=main,universe&binaryArch=amd64",
        "http://ftp.ubuntu.com/ubuntu?release=plucky-updates&components=main,universe&binaryArch=amd64"
      ]
    },
    {
      "matchDatasources": [
        "deb"
      ],
      "matchFileNames": [
        "ubuntu-25.10.dockerfile"
      ],
      "registryUrls": [
        "http://ftp.ubuntu.com/ubuntu?release=questing&components=main,universe&binaryArch=amd64",
        "http://ftp.ubuntu.com/ubuntu?release=questing-updates&components=main,universe&binaryArch=amd64"
      ]
    },
    {
      "extends": [
        "helpers:pinGitHubActionDigests",
        ":pinVersions"
      ],
      "versioning": "npm"
    }
  ],
  "hostRules": [
    {
      "matchHost": "repology.org",
      "concurrentRequestLimit": 1,
      "maxRequestsPerSecond": 0.1,
      "abortOnError": true,
      "keepAlive": true,
      "enableHttp2": true,
      "timeout": 300000
    }
  ],
  "dockerfile": {
    "enabled": false
  },
  "logLevelRemap": [
    {
      "matchMessage": "No dependencies found in file for custom regex manager",
      "newLogLevel": "warn"
    },
    {
      "matchMessage": "Found no results from datasource that look like a version",
      "newLogLevel": "warn"
    }
  ]
}
