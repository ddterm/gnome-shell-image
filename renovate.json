      "transformTemplates": [
        "{ 'releases': $[repo='ubuntu_25_04'].{ 'version': origversion }[] }"
      ]
    }
  },
  "packageRules": [
    {
      "matchFileNames": [
        "*.dockerfile"
      ],
      "groupName": "Image dependencies",
      "separateMajorMinor": false
    },
    {
      "matchDatasources": [
        "custom.repology.alpine_*",
        "custom.repology.arch",
        "custom.repology.fedora_*",
        "custom.repology.opensuse_*"
      ],
      "versioning": "rpm"
    },
    {
      "matchDatasources": [
        "custom.repology.debian_*",
        "custom.repology.ubuntu_*"
      ],
      "versioning": "deb"
    }
  ],
  "hostRules": [
    {
      "matchHost": "repology.org",
      "concurrentRequestLimit": 1,
      "maxRequestsPerSecond": 0.5
    }
  ],
  "dockerfile": {
    "enabled": false
  },
  "logLevelRemap": [
    {
      "matchMessage": "No dependencies found in file for custom regex manager",
      "newLogLevel": "warn"
    },
    {
      "matchMessage": "Found no results from datasource that look like a version",
      "newLogLevel": "warn"
    }
  ]
}
